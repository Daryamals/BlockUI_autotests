<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Local Multi-Browser Suite" parallel="tests" thread-count="4">

    <listeners>
        <listener class-name="com.way2automation.listeners.AllureListener"/>
        <listener class-name="com.way2automation.listeners.AnnotationTransformer"/>
    </listeners>

    <test name="Chrome Local Test">
        <parameter name="browser" value="CHROME"/>
        <parameter name="grid" value="false"/>
        <classes>
            <class name="com.way2automation.tests.SqlExCookieTest"/>
        </classes>
    </test>

    <test name="Firefox Local Test">
        <parameter name="browser" value="FIREFOX"/>
        <parameter name="grid" value="false"/>
        <classes>
            <class name="com.way2automation.tests.SqlExCookieTest"/>
        </classes>
    </test>

    <test name="Edge Local Test">
        <parameter name="browser" value="EDGE"/>
        <parameter name="grid" value="false"/>
        <classes>
            <class name="com.way2automation.tests.SqlExCookieTest"/>
        </classes>
    </test>

    <test name="IE Local Test">
        <parameter name="browser" value="IE"/>
        <parameter name="grid" value="false"/>
        <classes>
            <class name="com.way2automation.tests.SqlExCookieTest"/>
        </classes>
    </test>

</suite>